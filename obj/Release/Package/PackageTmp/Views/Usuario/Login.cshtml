﻿@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,300,500' rel='stylesheet' type='text/css'>
    <link href="~/Styles/Login/css/bootstrap.min.css" rel="stylesheet"/>    
    <script src="~/Scripts/lg.js"></script>
    <script type="text/javascript">
		$(function() {
			$('form').each(function() {
				$(this).find('input').keypress(function(e) {
					if(e.which == 10 || e.which == 13) {
						$('#logar').click();
					}
				});
			});
		});
    </script>
    <link id="favicon" href="~/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <link href="~/Styles/lg.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="wait alert-success bg-success text-center">AGUARDE UM INSTANTE</div>
        <div class="error alert-danger bg-danger text-center">USUÁRIO OU SENHA INVÁLIDOS</div>
        <div class="login-panel">
            <div class="login-header">
              
            </div>
            <div class="container">
                <form class="form-signin bg-white mt-5">
                    <img src="~/Images/indigo.png" class="logo pt-1 pb-3">
                    <div class="form-group">                        
                        <label for="login">Login</label>
                        <input class="form-control" type="text" id="login" class="form-control" placeholder="Usuário" />
                    </div>
                    <div class="form-group">
                        <label for="senha">Senha</label>
                        <input class="form-control" type="password" id="senha" class="form-control" placeholder="*********" />
                    </div>
                    <input type="button" id="logar" class="btn btn-lg btn-primary form-control" value="Login" data-url="@Url.Action("Login","Usuario")" />
                </form>
            </div>
        </div>
        <div class="bot"></div>
        <script src="~/Styles/Login/js/jquery.min.js"></script>
        <script src="~/Styles/Login/js/bootstrap.min.js"></script>
    </div>
</body>
